<!DOCTYPE html>
<html>
  <head>
    <title>ProgramNote</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav class="navbar navbar-expand-lg border-bottom border-dark">
      <div class="container">
        <% if admin_signed_in? %>
        <div class="row">
          <div class="col-auto">
            <li class="list-unstyled">
              <h4>プログラミングノート</h4>
            </li>
          </div>

          <ul class="navbar-nav">
            <div class="col-auto">
              <button type="button" class="btn btn-outline-secondary">
                <%= link_to "会員一覧", admin_customers_path, class: "text-dark" %>
              </button>
            </div>
            <div class="col-auto">
              <button type="button" class="btn btn-outline-secondary">
                <%= link_to "投稿一覧", admin_posts_path, class: "text-dark" %>
              </button>
            </div>
            <div class="col-auto">
              <button type="button" class="btn btn-outline-secondary">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "text-dark" %>
              </button>
            </div>
            <div class="col-auto">
              <button type="button" class="btn btn-outline-secondary">
                <%= link_to "ジャンル一覧", admin_genres_path, class: "text-dark" %>
              </button>
            </div>
          </ul>

        </div>

        <% elsif customer_signed_in? %>
        <div class="row">
          <div class="col-auto">
            <li class="list-unstyled">
              <h4>プログラミングノート</h4>
            </li>
          </div>
          <ul class="navbar-nav">
            <div class="col-auto">
              <button type="button" class="btn btn-outline-secondary">
                <%= link_to "投稿一覧", posts_path, class: "text-dark" %>
              </button>
            </div>
             <div class="col-auto">
              <button type="button" class="btn btn-outline-secondary">
                <%= link_to "ブックマーク", bookmarks_path, class: "text-dark" %>
              </button>
            </div>
            <div class="col-auto">
              <button type="button" class="btn btn-outline-secondary">
                <%= link_to "マイページ", customer_path(current_customer.id), class: "text-dark" %>
              </button>
            </div>
            <div class="col-auto">
              <button type="button" class="btn btn-outline-secondary">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "text-dark" %>
              </button>
            </div>
          </ul>
        </div>

        <% else %>
        <div class="row">
          <div class="col-auto">
            <li class="list-unstyled">
              <h4>プログラミングノート</h4>
            </li>
          </div>
          <ul class="navbar-nav">
            <div class="col-auto">
              <button type="button" class="btn btn-outline-secondary">
                <%= link_to "新規登録",new_customer_registration_path, class: "text-dark" %>
              </button>
            </div>
             <div class="col-auto">
              <button type="button" class="btn btn-outline-secondary">
                <%= link_to "投稿一覧", posts_path, class: "text-dark" %>
              </button>
            </div>
            <div class="col-auto">
              <button type="button" class="btn btn-outline-secondary">
                <%= link_to "ログイン", new_customer_session_path, class: "text-dark" %>
              </button>
            </div>
          </ul>
        </div>
        <% end %>
      </div>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
