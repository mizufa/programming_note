<h1>Admin::Customers#edit</h1>
<p>Find me in app/views/admin/customers/edit.html.erb</p>

<div class="container">
  <%= form_with model: @customer, url: "/admin/customers/#{@customer.id}", method: :patch do |f| %>
  <div class="row">
    <div class="col-auto">
      <div>
        <%= f.text_field :name, :placeholder => "ユーザー名" %>
      </div><br />
      <div>
        <%= f.email_field :email, :placeholder => "メールアドレス" %>
      </div><br />
      <div>
      <%= f.radio_button :is_deleted, "false" %><%= f.label :is_deleted_false, "有効" %>
      <%= f.radio_button :is_deleted, "true" %><%= f.label :is_deleted_true, "退会" %>
      </div><br />
      <div>
        <%= f.submit "更新する", class: 'btn btn-success' %>
      </div>
    </div>
  </div>
  <% end %>
