<h1>Public::Posts#index</h1>

<div class="container">
  <div class="row justify-content-end">
    <div class="col-auto">
      <%= search_form_for @q do |f| %><!--検索機能-->
        <%= f.search_field :title_or_text_cont %>
        <%= f.submit %>
      <% end %>
    </div>
    <div class="col-auto">
      <%= link_to "新規投稿", new_post_path, class: 'btn btn-success' %>
    </div>
  </div>

  <% @posts.each do |post_text| %><!--投稿一覧-->
    <div class="row justify-content-center">
      <%= link_to post_path(post_text.id), class: 'col w-100 m-3 p-5 text-center border text-decoration-none' do %>
        <p class="text-dark"><%= post_text.title %></p>
      <% end %>
    </div>
  <% end %>

  <%= paginate @posts %>
</div>