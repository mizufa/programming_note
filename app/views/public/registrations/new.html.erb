<div class="container">
<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "ユーザー名" %>
  </div><br />

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス" %>
  </div><br />

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード" %>
  </div><br />

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "確認用パスワード" %>
  </div><br />

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

</div>