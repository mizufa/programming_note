<h1>Public::Bookmarks#index</h1>
<p>Find me in app/views/public/bookmarks/index.html.erb</p>

<div class="container">
    <% @bookmarks.each do |bookmark| %>
      <div class="row justify-content-center">
        <%= link_to post_path(bookmark.post.id), class: 'col w-100 m-3 p-5 text-center border text-decoration-none' do %>
          <p class="text-dark"><%= bookmark.post.title %></p>
        <% end %>
      </div>
    <% end %>
</div>