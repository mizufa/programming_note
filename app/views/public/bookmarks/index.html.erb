<h1>Public::Bookmarks#index</h1>
<p>Find me in app/views/public/bookmarks/index.html.erb</p>

<div class="container">
  <div class="row justify-content-center">
    <table class="table">
      <% @bookmarks.each do |bookmark| %>
      <tbody>
        <tr>
          <td>
            <%= link_to post_path(bookmark.post.id) do %>
              <%= bookmark.post.title %>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>