<h1>Public::Bookmarks#index</h1>
<p>Find me in app/views/public/bookmarks/index.html.erb</p>

<div class="container">
    <% @bookmarks.each do |bookmark| %>
      <div class="row m-3 p-5 justify-content-center border">
        <div class=" col-auto">
          <%= link_to post_path(bookmark.post.id), class: 'text-dark' do %>
            <%= bookmark.post.title %>
          <% end %>
        </div>
      </div>
    <% end %>
</div>