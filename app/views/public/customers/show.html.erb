<h1>Public::Customers#show</h1>
<p>Find me in app/views/public/customers/show.html.erb</p>

<div class="container">

  <div class="row justify-content-center">
    <div class="col-3 border text-center">
      <div>
        <p><strong>＜プロフィール＞</strong></p>
      </div>
      <div>
        <p><%= @customer.name %></p>
      </div>
      <div>
        <p><%= @customer.email %></p>
      </div>
      <div>
        <%= link_to "プロフィール編集", edit_customer_path, class: 'btn btn-success' %>
      </div>
    </div>

    <div class="col-1"></div><!--空白スペース-->

    <div class="col-7"><!--ユーザーの投稿を表示-->
      <div>
        <p><strong>＜投稿＞</strong></p>
      </div>
      <% @posts.each do |content| %>
        <%= link_to post_path(content.id), class: 'text-dark text-decoration-none' do %>
          <div class="mb-3 text-left border">
            <div class="ml-3 m-2">投稿日を入れたい</div>
            <div class="ml-3 m-2"><%= content.title %></div>
            <div class="ml-3 m-2">サンプル</div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

</div>