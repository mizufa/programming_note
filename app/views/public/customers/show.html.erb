<h1>Public::Customers#show</h1>
<p>Find me in app/views/public/customers/show.html.erb</p>


<div class="container">
  <div class="row">
    <div class="col-auto">
      <div>
        <p><%= @customer.name %></p>
      </div>
      <div>
        <p><%= @customer.email %></p>
      </div>
      <div>
        <%= link_to "プロフィール編集", edit_customer_path, class: 'btn btn-success' %>
      </div>
    </div>
    <div class="col-auto">
      <% @posts.each do |content| %>
        <div>
          <%= link_to post_path(content.id) do %>
            <%= content.title %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>