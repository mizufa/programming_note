<h1>Public::Customers#edit</h1>
<p>Find me in app/views/public/customers/edit.html.erb</p>

<div class="container">
  <%= form_with model: @customer, method: :patch do |f| %>
  <div class="row">
    <div class="col-auto">
      <div>
        <%= f.text_field :name, :placeholder => "ユーザー名" %>
      </div><br />
      <div>
        <%= f.email_field :email, :placeholder => "メールアドレス" %>
      </div><br />
      <div>
        <%= f.submit "更新する", class: 'btn btn-success' %>
      </div>
    </div>
  </div>
  <% end %>
